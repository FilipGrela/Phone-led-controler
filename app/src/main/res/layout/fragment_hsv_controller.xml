<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.hsvcontroller.HsvControllerFragment"
    android:id="@+id/fragment_hsv_controller">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="45dp"
            android:text="@string/main_activity_title"
            android:textSize="32sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingTop="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H:" />

            <EditText
                android:id="@+id/HSeekbarValue"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:hint="0"
                android:inputType="numberDecimal" />


            <SeekBar
                android:id="@+id/HSeekbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingTop="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S:" />

            <EditText
                android:id="@+id/SSeekbarValue"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:hint="0"
                android:inputType="numberDecimal" />


            <SeekBar
                android:id="@+id/SSeekbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingTop="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V:" />

            <EditText
                android:id="@+id/VSeekbarValue"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:hint="0"
                android:inputType="numberDecimal" />


            <SeekBar
                android:id="@+id/VSeekbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/favourite_0"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="#00FFFFFF" />

                <Button
                    android:id="@+id/favourite_1"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="#00FFFFFF" />

                <Button
                    android:id="@+id/favourite_2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="#00FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/favourite_3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="#00FFFFFF" />

                <Button
                    android:id="@+id/favourite_4"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="#00FFFFFF" />

                <Button
                    android:id="@+id/favourite_5"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="#00FFFFFF" />
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>

</FrameLayout>